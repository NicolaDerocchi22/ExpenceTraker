<%- include("header") -%>
    <h1>Entrate</h1>
    <hr>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center">Filtri</h3>
            </div>
        </div>
        <hr>
        <div class="card spese-margin">
            <div class="card-header text-center">
                <h2>####</h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Stipendio: -->
                            <%= tStipendio %>
                        </li>
                        <li class="list-group-item">PayPal: -->
                            <%= tPayPal %>
                        </li>
                        <li class="list-group-item">Altro: -->
                            <%= tAltro %>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-footer text-muted text-center">
                <h5>Totale: -->
                    <%= totEntrate %>
                </h5>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Data</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Importo</th>
                            <th scope="col">Conto</th>
                            <th scope="col">Note</th>
                        </tr>
                        <% entrate.forEach(e => { %>
                            <tr>
                                <th scope="row">
                                    <%= e.titolo %>
                                </th>
                                <td>
                                    <%= e.data.toLocaleDateString("it-IT") %>
                                </td>
                                <td>
                                    <%= e.categoria %>
                                </td>
                                <td>
                                    <%= e.importo %>
                                </td>
                                <td>
                                    <%= e.conto %>
                                </td>
                                <td>
                                    <%= e.descrizione %>
                                </td>
                            </tr>
                            <% }); %>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include("footer") -%>
        </body>

        </html>