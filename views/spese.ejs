<%- include("header") -%>
    <h1>Spese</h1>
    <hr>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h3>Filtri</h3>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Data</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Importo</th>
                            <th scope="col">Conto</th>
                            <th scope="col">Note</th>
                        </tr>
                        <% spese.forEach(s => { %>
                            <tr>
                                <th scope="row">
                                    <%= s.titolo %>
                                </th>
                                <td>
                                    <%= s.data.toLocaleDateString("it-IT") %>
                                </td>
                                <td>
                                    <%= s.categoria %>
                                </td>
                                <td>
                                    <%= s.importo %>
                                </td>
                                <td>
                                    <%= s.conto %>
                                </td>
                                <td>
                                    <%= s.descrizione %>
                                </td>
                            </tr>
                            <% }); %>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include("footer") -%>
        </body>

        </html>