<%- include("header") -%>
    <h1 class="text-center">Spese</h1>
    <hr>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h3 class="text-center">Filtri</h3>
            </div>
        </div>
        <hr>
        <div class="card spese-margin">
            <div class="card-header text-center">
                <h2>####</h2>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Bar: -->
                            <%= tBar %>
                        </li>
                        <li class="list-group-item">PayPal: -->
                            <%= tPayPal %>
                        </li>
                        <li class="list-group-item">Benzina: -->
                            <%= tBenzina %>
                        </li>
                        <li class="list-group-item">Spesa: -->
                            <%= tSpesa %>
                        </li>
                        <li class="list-group-item">Shopping: -->
                            <%= tShopping %>
                        </li>
                        <li class="list-group-item">Ristorante: -->
                            <%= tRistorante %>
                        </li>
                    </ul>
                </div>
                <div class="col-sm-6">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Regali: -->
                            <%= tRegali %>
                        </li>
                        <li class="list-group-item">Casa: -->
                            <%= tCasa %>
                        </li>
                        <li class="list-group-item">Prelievi: -->
                            <%= tPrelievi %>
                        </li>
                        <li class="list-group-item">Telefono: -->
                            <%= tTelefono %>
                        </li>
                        <li class="list-group-item">Palestra: -->
                            <%= tPalestra %>
                        </li>
                        <li class="list-group-item">Altro: -->
                            <%= tAltro %>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-footer text-muted text-center">
                <h5>Totale: -->
                    <%= totSpese %>
                </h5>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-12">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Data</th>
                            <th scope="col">Categoria</th>
                            <th scope="col">Importo</th>
                            <th scope="col">Conto</th>
                            <th scope="col">Note</th>
                            <th scope="col">Operazioni</th>
                        </tr>
                        <% spese.forEach(s=> { %>
                            <tr>
                                <th scope="row" class="text-table">
                                    <%= s.titolo %>
                                </th>
                                <td class="text-table">
                                    <%= s.data.toLocaleDateString("it-IT") %>
                                </td>
                                <td class="text-table">
                                    <%= s.categoria %>
                                </td>
                                <td class="text-table">
                                    <%= s.importo %>
                                </td>
                                <td class="text-table">
                                    <%= s.conto %>
                                </td>
                                <td class="text-table">
                                    <%= s.descrizione %>
                                </td>
                                <td class="text-table">
                                    <form action="/deleteSpesa" method="post">
                                        <button type="submit" name="btndeleteSpese" value="<%= s._id %>"
                                            class="btn btn-sm btn-outline-primary"><i
                                                class="fa-solid fa-trash-arrow-up fa-sm"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <%- include("footer") -%>
        </body>

        </html>